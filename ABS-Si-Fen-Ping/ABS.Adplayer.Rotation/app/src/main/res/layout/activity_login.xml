<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context="com.meiaomei.absadplayerrotation.activity.LoginActivity">

    <TextView
        android:id="@+id/title"
        android:layout_alignLeft="@+id/ed_Name"
        android:textColor="@color/colorTextblack"
        android:layout_marginTop="20dp"
        android:textSize="23sp"
        android:text="现在我们开始激活："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_1"
        android:layout_below="@+id/title"
        android:layout_alignLeft="@+id/ed_Name"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:text="激活共两步: 1、请在下面填写或者核对机构名称："
        android:textColor="@color/colorTextblack"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/ed_Name"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="8dp"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_1"
        android:background="@drawable/square"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:singleLine="true"
        android:textColor="@color/colorTextblack"
        android:textSize="16sp" />

    <Button
        android:id="@+id/bt_done1"
        android:text="确定"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/ed_Name"
        android:layout_below="@+id/ed_Name"
        android:background="@drawable/bt_select"
        android:textColor="@color/color_white"
        android:layout_width="60dp"
        android:layout_height="35dp" />

    <ImageView
        android:id="@+id/img_zxing"
        android:visibility="gone"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bt_done1"
        android:layout_width="250dp"
        android:layout_height="250dp" />


    <TextView
        android:id="@+id/tv_2"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_alignLeft="@+id/ed_Name"
        android:textColor="@color/colorTextblack"
        android:textSize="16sp"
        android:text="2、将二维码图片通过短信,微信,QQ,或者电子邮件发送给鑫银泰客服人员,索取您的激活码后填写在下面的文本框中!"
        android:layout_below="@+id/img_zxing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/ed_Num"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_2"
        android:background="@drawable/square"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:singleLine="true"
        android:textColor="@color/colorTextblack"
        android:textSize="16sp" />
    <Button
        android:id="@+id/bt_done2"
        android:visibility="gone"
        android:text="确定"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ed_Num"
        android:layout_alignBottom="@+id/bt_cancle2"
        android:layout_toLeftOf="@+id/bt_cancle2"
        android:layout_marginRight="20dp"
        android:background="@drawable/bt_select"
        android:textColor="@color/color_white"
        android:layout_width="60dp"
        android:layout_height="35dp" />

    <Button
        android:id="@+id/bt_cancle2"
        android:visibility="gone"
        android:text="取消"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ed_Num"
        android:layout_alignRight="@id/ed_Num"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bt_select"
        android:textColor="@color/color_white"
        android:layout_width="60dp"
        android:layout_height="35dp" />

</RelativeLayout>
